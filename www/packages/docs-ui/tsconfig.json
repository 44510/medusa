{
  "extends": "tsconfig/base.json",
  "compilerOptions": {
    "paths": {
      "docs-ui": ["./src/index.ts"],
      "@/components/*": ["./src/components/*"],
      "@/icons": ["./src/icons/index.ts"],
      "@/icons/*": ["./src/icons/*"],
      "@/providers/*": ["./src/providers/*"]
    },
    "outDir": "dist",
    "tsBuildInfoFile": "./dist/.tsbuildinfo-client",
    "noEmit": false,
    "jsx": "react",
    "lib": ["dom", "ES2015"],
    "module": "ESNext",
    "target": "es6",
    "declaration": true,
    "declarationMap": true
  },
  "include": [
    "src/**/*",
    "rollup.config.js"
  ]
}