{
  "extends": "tsconfig/base.json",
  "compilerOptions": {
    "paths": {
      "docs-ui": ["./src/index.ts"],
      "@/components/*": ["./src/components/*"],
      "@/icons": ["./src/icons/index.ts"],
      "@/icons/*": ["./src/icons/*"]
    },
    "outDir": "./dist",
    "jsx": "react",
    "lib": ["dom", "ES2015"],
    "module": "ESNext",
    "target": "es6",
    "incremental": false
  },
  "include": [
    "src/**/*",
    "tailwind.config.js",
    "postcss.config.js",
  ]
}