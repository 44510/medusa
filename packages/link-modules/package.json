    "build": "rimraf dist && tsc --build && tsc-alias -p tsconfig.json",
    "test": "jest --passWithNoTests --runInBand --forceExit -- src/**/__tests__/**/*.ts",
    "test:integration": "jest --passWithNoTests --runInBand --forceExit -- integration-tests/**/__tests__/**/*.ts"
  },
  "devDependencies": {
    "@mikro-orm/cli": "5.7.12",
    "cross-env": "^5.2.1",
