    "pg-god": "^1.0.12",
    "rimraf": "^3.0.2",
    "ts-jest": "^25.5.1",
    "ts-node": "^10.9.1",
    "tsc-alias": "^1.8.6",
    "typescript": "^4.4.4"
  },
  "dependencies": {
    "@medusajs/modules-sdk": "^1.8.8",
